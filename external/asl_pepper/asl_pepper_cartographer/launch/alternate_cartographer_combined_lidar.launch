<launch>
  <node name="cartographer_node" pkg="cartographer_ros"
      type="cartographer_node" args="
          -configuration_directory $(find asl_pepper_cartographer)/config
          -configuration_basename pepper_lidar_combined.lua"
      output="screen">
      <remap from="scan" to="sick_laser_front/scan" />
      <remap from="points2" to="sick_laser_rear/cloud" />
    <remap from="odom" to="pepper_robot/odom" />
  </node>

  <node name="cartographer_occupancy_grid_node" pkg="cartographer_ros"
      type="cartographer_occupancy_grid_node" args="-resolution 0.05" />

</launch>
